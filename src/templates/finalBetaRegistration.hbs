<mjml>
    <mj-head>
        <mj-attributes>
            <mj-text font-family="Ubuntu, Helvetica, Arial, sans-serif" color="#000000"></mj-text>
            <mj-class name="description"></mj-class>
            <mj-class name="preheader" color="#000000" font-size="11px" padding-left="25px" padding-right="25px"></mj-class>
            <mj-class name="button" background-color="#fcc245" color="#000000" font-size="18px" border-radius="3px" font-family="Ubuntu, Helvetica, Arial, sans-serif"></mj-class>
        </mj-attributes>
        <mj-style inline="inline">a { text-decoration: none!important; }
        </mj-style>
    </mj-head>
    <mj-body background-color="#ccd3e0" font-size="13px">
        <mj-section background-color="#ecf0f1" padding-bottom="20px" padding-top="20px">
            <mj-column width="100%">
                <mj-image src="https://i.imgur.com/WMgYHxb.png" alt="" align="center" border="none" width="100px" padding-left="0px" padding-right="0px" padding-bottom="10px" padding-top="10px"></mj-image>
            </mj-column>
        </mj-section>
        <mj-section background-color="#00A8FF" padding-bottom="0px" padding-top="0">
            <mj-column width="100%">
                <mj-text align="center" font-size="13px" color="#ABCDEA" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="18px" padding-top="28px">Hello,
                    <p style="font-size:16px; color:white">{{fullName}}</p>
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section background-color="#00A8FF" padding-bottom="5px" padding-top="0">
            <mj-column width="100%">
                <mj-divider border-color="#ffffff" border-width="2px" border-style="solid" padding-left="20px" padding-right="20px" padding-bottom="0px" padding-top="0"></mj-divider>
                <mj-text align="center" color="#FFF" font-size="13px" padding-left="25px" padding-right="25px" padding-bottom="28px" padding-top="28px"><span style="font-size:20px; font-weight:bold">Thank you very much for your registration in Sarpheab Beta program.</span>
                    <br />
                    <br />

                    <span style="font-size:15px">Your application has been approved. Please change your password once you logined.</span>
                    <br />
                    <br />
                    <span style="font-size:15px">Please find your login information below and do not share with other people.</span>
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section background-color="#00A8FF" padding-bottom="15px">
            <mj-column>
                <mj-text align="center" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Login</strong></mj-text>
                <mj-text align="center" color="#FFF" font-size="12px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px">{{email}}</mj-text>
                <mj-text align="center" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Password</strong></mj-text>
                <mj-text align="center" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><i>{{password}}</i></mj-text>

            </mj-column>
        </mj-section>
        <mj-section background-color="#ecf0f1" padding-bottom="20px" padding-top="20px">
            <mj-column width="50%">
                <mj-button background-color="#00A8FF" color="#FFF" font-size="14px" align="center" font-weight="bold" border="none" padding="15px 30px" border-radius="10px" href="https://beta.sarpheab.com" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="10px">Login</mj-button>
            </mj-column>
        </mj-section>

        <mj-section background-color="#00A8FF" padding-bottom="0px" padding-top="0">
            <mj-column vertical-align="middle">
                <mj-text align="center" font-size="12px" font-weight="bold" padding="0 25px" color="#ffff">
                    <p>Info@sarpheab.com</p>
                </mj-text>
                <mj-text align="center" color="#FFFFFF" font-size="13px" padding="0 25px">
                </mj-text>
            </mj-column>a
            <mj-column vertical-align="middle">
                <mj-image href="https://mjml.io" src="https://i.imgur.com/WMgYHxb.png" alt="Logo yellow" width="100px" padding="0px"></mj-image>
            </mj-column>
            <mj-column vertical-align="middle">
                <mj-social mode="horizontal" padding="30px">
                    <mj-social-element name="facebook" href="https://www.facebook.com/sarpheabkh"></mj-social-element>
                </mj-social>
            </mj-column>
        </mj-section>
        <mj-section background-color="#ecf0f1">
            <mj-column width="100%" padding="0">
                <mj-text color="#445566" font-size="12px" align="center" line-height="16px" align="align">
                    You are receiving this email because you registered in Sarpheab Beta program to get an early access on this platform. If you did not register, and you believe someone may use this email without your consent, please just ignore it.
                </mj-text>
                <mj-text color="#445566" font-size="11px" align="center" line-height="16px">
                    &copy; Sarpheab - Confession, All Rights Reserved.
                </mj-text>
            </mj-column>
        </mj-section>
        <mj-section padding-top="0" background-color="#ecf0f1">
            <mj-group>
                <mj-column width="100%" padding-right="0">
                    <mj-text color="#445566" font-size="11px" align="center" line-height="16px" font-weight="bold">
                        <a class="footer-link" href="https://beta.sarpheab.com/privacy">Privacy</a>&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;&#xA0;<a class="footer-link" href="https://beta.sarpheab.com/tos">Terms of Service</a>
                    </mj-text>
                </mj-column>
            </mj-group>
        </mj-section>
    </mj-body>
</mjml>
